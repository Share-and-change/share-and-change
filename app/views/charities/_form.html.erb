
<%= simple_form_for(@charity) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :logo %>
    <%= f.input :catchphrase %>
    <%= f.input :description %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :website %>
    <%= f.input :adress %>
    <%= f.input :zipcode %>
    <%= f.input :city %>
    <%= f.input :country %>
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
