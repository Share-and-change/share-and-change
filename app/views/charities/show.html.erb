<div class="charity-logo">
<% if @charity.logo %>
 <%= image_tag(@charity.logo, class: "img_logo") %>
 <% else %>
<% end %>
</div>

<h1><%= @charity %></h1>
<p><%= @charity.description%></p>


<address>
  <ul>

    <% if @charity.website %>
    <li>
      site :
      <a target="_blank" href="<%= @charity.website %>" title="site de Singa France - lien externe"><%= @charity.website %></a>
    </li>
    <% else %>
    <% end %>

    <%if @charity.phone %>
    <li>
      téléphone :
      <a href="tel:<%= @charity.phone%>"><%= @charity.phone%></a>
    </li>
    <% else %>
    <% end %>

    <%if @charity.email %>
    <li>
      mail :
      <a href="mailto: <%=@charity.email%>"><%=@charity.email%></a>
    </li>
    <% else %>
    <% end %>

     <%if @charity.adress %>
    <li>
      lieu : <%=@charity.adress%>, <%=@charity.zipcode%> <%=@charity.city%>
    </li>
     <% else %>
    <% end %>
    
  </ul>
</address>

<%if @charity.capsules %>
<p class="title_link_capsule">Ils en parlent aussi</p>
<% @charity.capsules.each do |capsule| %>
  <%= render capsule %>
<% end %>
<% else %>
<% end %>

